#ifndef NATIVE_H_
#define NATIVE_H_

#include <orion>
#include <simg>

namespace orion {

// Logging..
void message( const char *message );
void warning( const char *message );
void alert( const char *message );

// Time
void getTime( Time& time ); // UTC Time!
void getTime( LocalTime& time ); // Local Time!

// File I/O
FILE *openFileRead( std::string path );
FILE *openFileWrite( std::string path );
void closeFile( FILE *file );
bool readFile( std::string path , std::string& content );

// Image loading functionality _always_ happens through softimage
bool loadImageFile( std::string path , simg::Buffer& softimage );
bool saveImageFile( std::string path , simg::Buffer& softimage );

} // orion

#endif // NATIVE_H_
