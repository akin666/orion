
#ifndef THREADPOOL_H_
#include <tpool/threadpool.hpp>
#include <global>

#define queWork( work ) { if( orion::getGlobal<orion::ThreadPool>() != NULL ) \
						{ \
							orion::getGlobal<orion::ThreadPool>()->schedule( &work ); \
						} \
						else if( work.begin() ) \
						{ \
							work.run(); \
							work.end(); \
						} }

#endif
