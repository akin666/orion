#ifndef ALLOCATOR_HPP_
#define ALLOCATOR_HPP_

#include <orion>

namespace orion {

class Allocator
{
protected:
	// own data..
public:
	Allocator();
	virtual ~Allocator();
	
	virtual bool initialize();

	template <class CType>
	CType *create()
	{
		return new CType;
	}

	template <class CType>
	void destroy( CType* data )
	{
		delete data;
	}
};

} // namespace orion
#endif // ALLOCATOR_HPP_
